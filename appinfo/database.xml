<?xml version="1.0" encoding="ISO-8859-1" ?>
<database>
	
	<name>*dbname*</name>
	<create>true</create>
	<overwrite>false</overwrite>
	
	<charset>latin1</charset>
	
	<table>
		
		<name>*dbprefix*email_connection</name>
		
		<declaration>
			
			<field>
				<name>uid</name>
				<type>varchar</type>
				<default> </default>
				<notnull>true</notnull>
				<length>64</length>
			</field>
			
			<field>
				<name>mailhost</name>
				<type>varchar</type>
				<default>localhost</default>
				<notnull>true</notnull>
				<length>255</length>
			</field>
			<field>
				<name>mailuser</name>
				<type>varchar</type>
				<default> </default>
				<notnull>true</notnull>
				<length>255</length></field>
			<field>
				<name>mailpwd</name>
				<type>varchar</type>
				<default> </default>
				<notnull>true</notnull>
				<length>255</length></field>
			<field>
				<name>mailssl</name>
				<type>boolean</type>
				<default>true</default>
				<notnull>true</notnull></field>
			<field>
				<name>mailport</name>
				<type>int</type>
				<default>993</default>
				<length>5</length></field>

		</declaration>

 </table>
</database>